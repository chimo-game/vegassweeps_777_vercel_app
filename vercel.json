{
  "redirects": [
    {
      "source": "/wp-admin/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/wp-login.php",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/wp-content/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/wp-includes/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/wp-json/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/xmlrpc.php",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/feed/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/category/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/tag/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/author/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/comments/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/trackback/:path*",
      "destination": "/",
      "statusCode": 301
    },
    {
      "source": "/wp-sitemap.xml",
      "destination": "/sitemap.xml",
      "statusCode": 301
    },
    {
      "source": "/wp-sitemap-:path*",
      "destination": "/sitemap.xml",
      "statusCode": 301
    },
    {
      "source": "/:path*.php",
      "destination": "/",
      "statusCode": 301
    }
  ],
  "rewrites": [
    {
      "source": "/api/postback",
      "destination": "/api/postback.js"
    },
    {
      "source": "/api/get-offers",
      "destination": "/api/get-offers.js"
    },
    {
      "source": "/api/check-lead",
      "destination": "/api/check-lead.js"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/assets/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/favicon/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}